@model TesteUGBMVC.Models.ServicoViewModel

<form asp-action="SolicitarServico" method="post">
    <div class="form-group">
        <label for="FornecedorId">Selecione um fornecedor:</label>
        <select asp-for="FornecedorId" asp-items="Model.Fornecedores"></select>
    </div>
    <div class="form-group">
        <label for="ServicoId">Selecione um serviço:</label>
        <select asp-for="ServicoId" asp-items="Model.Servicos"></select>
    </div>
    <button type="submit" class="btn btn-primary">Solicitar Serviço</button>
</form>
