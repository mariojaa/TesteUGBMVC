@model ServicoViewModel

<h2>Excluir Serviço</h2>

<p>Você está prestes a excluir o seguinte serviço:</p>

<dl class="dl-horizontal">
    <dt>Nome do Serviço:</dt>
    <dd>@Model.NomeDoServico</dd>
    <!-- Adicione outros detalhes do serviço, se necessário -->
</dl>

<form asp-action="DeletarServicoSolicitado" asp-route-id="@Model.Id" method="post">
    <input type="submit" value="Excluir" class="btn btn-danger" />
    <a asp-action="ListaServicosSolicitados" class="btn btn-default">Cancelar</a>
</form>
