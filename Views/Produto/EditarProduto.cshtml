@using TesteUGBMVC.Models.Enum;
@using TesteUGBMVC.ViewModels;
@model ProdutoViewModel

<h2>Editar Produto</h2>

<form asp-action="EditarProduto" method="post">
    <div class="form-group">
        <label asp-for="NomeProduto">Nome do Produto</label>
        <input asp-for="NomeProduto" class="form-control" />
        <span asp-validation-for="NomeProduto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NumeroPedidoProduto">Número do Pedido</label>
        <input asp-for="NumeroPedidoProduto" class="form-control" />
        <span asp-validation-for="NumeroPedidoProduto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FornecedorProduto">Fornecedor</label>
        <input asp-for="FornecedorProduto" class="form-control" />
        <span asp-validation-for="FornecedorProduto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="QuantidadeTotalEmEstoque">Quantidade em Estoque</label>
        <input asp-for="QuantidadeTotalEmEstoque" class="form-control" />
        <span asp-validation-for="QuantidadeTotalEmEstoque" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="QuantidadeMinimaEmEstoque">Quantidade Mínima em Estoque</label>
        <input asp-for="QuantidadeMinimaEmEstoque" class="form-control" />
        <span asp-validation-for="QuantidadeMinimaEmEstoque" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SetorDeDeposito">Setor de Depósito</label>
        <input asp-for="SetorDeDeposito" class="form-control" />
        <span asp-validation-for="SetorDeDeposito" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataCadastroProduto">Data de Cadastro</label>
        <input asp-for="DataCadastroProduto" type="date" class="form-control" />
        <span asp-validation-for="DataCadastroProduto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DataPrevisaoEntregaProduto">Data de Previsão de Entrega</label>
        <input asp-for="DataPrevisaoEntregaProduto" type="date" class="form-control" />
        <span asp-validation-for="DataPrevisaoEntregaProduto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="TipoDoProdutoUnitarioOuPacote">Tipo do Produto</label>
        <select asp-for="TipoDoProdutoUnitarioOuPacote" asp-items="Html.GetEnumSelectList<TipoDoProdutoEnum>()" class="form-control">
            <option value="">Selecione o Tipo</option>
        </select>
        <span asp-validation-for="TipoDoProdutoUnitarioOuPacote" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ValorUnitarioDoProduto">Valor Unitário</label>
        <input asp-for="ValorUnitarioDoProduto" class="form-control" />
        <span asp-validation-for="ValorUnitarioDoProduto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NumeroNotaFiscalProduto">Número da Nota Fiscal</label>
        <input asp-for="NumeroNotaFiscalProduto" class="form-control" />
        <span asp-validation-for="NumeroNotaFiscalProduto" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CodigoEAN">Código de Barras</label>
        <input asp-for="CodigoEAN" class="form-control" />
        <span asp-validation-for="CodigoEAN" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Salvar</button>
</form>

<a asp-action="ListaProdutos">Voltar para a Lista</a>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
